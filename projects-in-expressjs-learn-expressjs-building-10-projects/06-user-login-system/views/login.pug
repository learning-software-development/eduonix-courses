extends layout

block content
  h1= title
  .mt-4
  div.errors
    if errors
      each error, index in errors
        div.alert.alert-danger= error.msg
  form(method="POST" action="/login")
    div.mb-3
      label.form-label(for="username") Username
      input.form-control(type="text" name="username" id="username" required)
    div.mb-3
      label.form-label(for="password") Password
      input.form-control(type="password" name="password" id="password" required)

    button.btn.btn-primary(type="submit" name="submit") Login
    a.btn.btn-secondary(href="/") Cancel

  div.my-2
    | Don't have an account yet?
    a.link(href="/register") Register now
